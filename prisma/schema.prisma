generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model WordSet {
  id        String   @id @default(cuid())
  title     String
  desc      String   @default("")
  words     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PendingWordSet {
  id        String   @id @default(cuid())
  title     String
  desc      String
  words     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PrivatWordSet {
  id        String   @id @default(cuid())
  title     String
  desc      String   @default("")
  words     Json
  privatCode String  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}